<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forgot_password_background"
    android:padding="40dp">

    <!-- Circular Background -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/forgot_password_circle"
        android:elevation="8dp"
        android:padding="10dp" />

    <!-- Floating Image in Front of Circle -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="241dp"
        android:layout_height="232dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:elevation="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/fogotpassword_logo" />

    <!-- Forgot Password Container -->
    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImage"
        android:layout_marginTop="-87dp"
        android:background="@drawable/forgot_password_card_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="60dp"
        android:paddingRight="24dp"
        android:paddingBottom="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/forgotTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text="Verification Code"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <!-- verification code Label -->


        <!-- Code Input Fields -->

        <TextView
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Enter the verification code just sent your email address"
            android:textColor="#000000"
            android:textSize="11sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/edit_text_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/code2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/edit_text_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/code3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/edit_text_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/code4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/edit_text_background"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="20sp" />

        </LinearLayout>

        <Button
            android:id="@+id/verifyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#430DAE"
            android:text="Verify"
            android:textColor="@android:color/white" />



    </LinearLayout>
</RelativeLayout>
