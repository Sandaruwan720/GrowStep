<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#240D3E">

    <!-- Top Gradient Profile Header -->

    <!-- This Week Stats Container -->


    <!-- 4 Feature Buttons -->

    <LinearLayout
        android:id="@+id/profileHeader"
        android:layout_width="473dp"
        android:layout_height="195dp"
        android:background="@drawable/diamond_button_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profileIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="TS"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tharuka Sandaruwan"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvUserLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 8 Walker â€¢ 2,450 points"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/weeklyStatsGaid"
        android:layout_width="371dp"
        android:layout_height="212dp"
        android:layout_below="@id/profileHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="33dp"
        android:columnCount="2"
        android:gravity="center"
        android:useDefaultMargins="true">

        <LinearLayout
            android:id="@+id/statsCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_below="@id/stepCircleContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:background="@drawable/forgot_password_card_background"
            android:elevation="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stepsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="This week's Steps"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/NupberSteps"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="56,847"
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Nupberdistance"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="42.3 km"
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/steps"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="steps"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/Distance"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Distance"
                    android:textColor="#000000"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/NupberGroupsWalked"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/NupberCalories"
                    android:layout_width="0dp"
                    android:layout_height="39dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="2,847"
                    android:textColor="#4CAF50"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/Groupwalks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Group Walks"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/Calories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Calories"
                    android:textColor="#000000"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>
    </GridLayout>

    <GridLayout
        android:id="@+id/featuresGrid"
        android:layout_width="343dp"
        android:layout_height="145dp"
        android:layout_below="@id/weeklyStatsGaid"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="32dp"
        android:columnCount="2"
        android:columnOrderPreserved="false"

        android:hapticFeedbackEnabled="false"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/btnAchievement"
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:layout_columnWeight="1"
            android:background="@drawable/diamond_button_bg"
            android:text="Achievement"
            android:textColor="@android:color/white"
            android:textColorLink="#992C2C" />

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:layout_columnWeight="1"
            android:background="@drawable/diamond_button_bg"
            android:backgroundTint="#F2E9E9"
            android:text="history"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnRewards"
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:layout_columnWeight="1"
            android:layout_marginTop="16dp"
            android:background="@drawable/diamond_button_bg"
            android:backgroundTint="#A90A0A"
            android:backgroundTintMode="src_over"
            android:text="Rewards"
            android:textColor="@android:color/white"
            android:textColorHighlight="#BF6464"
            app:iconTint="#921818" />

        <Button
            android:id="@+id/btnFriends"
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:layout_columnWeight="1"
            android:layout_marginTop="16dp"
            android:background="@drawable/diamond_button_bg"
            android:text="Friends"
            android:textColor="@android:color/white"
            android:textColorHighlight="#C7C2C2"
             />
    </GridLayout>


    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/navigation_bar"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="4">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Groups -->
        <LinearLayout
            android:id="@+id/nav_groups"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_group" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groups"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Challenges -->
        <LinearLayout
            android:id="@+id/nav_challenges"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_challenge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenges"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Start Button and Shadow -->
    <TextView
        android:id="@+id/diamondShadow"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:rotation="45"
        android:background="#2E2A41" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        android:background="@drawable/diamond_button_bg"
        android:rotation="45" />

    <TextView
        android:id="@+id/startLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textColor="#F2E9E9"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp" />


</RelativeLayout>