<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82189A"
    android:padding="40dp">

    <!-- Circular Background -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/forgot_password_circle"
        android:elevation="8dp"
        android:padding="10dp" />

    <!-- Floating Image in Front of Circle -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="241dp"
        android:layout_height="232dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:elevation="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/fogotpassword_logo" />

    <!-- Forgot Password Container -->
    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="wrap_content"
        android:layout_height="439dp"
        android:layout_below="@id/logoImage"
        android:layout_marginTop="-87dp"
        android:background="@drawable/forgot_password_card_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingTop="60dp"
        android:paddingRight="24dp"
        android:paddingBottom="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/forgotTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text="Forgot password"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <!--new password Label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Enter the new password"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Email Input with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:background="#1AF6EDED"
                android:backgroundTint="#8000"
                android:src="@android:drawable/ic_lock_idle_lock"
                android:tint="#000000" />

            <EditText
                android:id="@+id/new_passwordt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="New password"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="#000000" />
        <!-- comfirm password-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Enter Confirm Password"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:background="#1AF6EDED"
                android:backgroundTint="#8000"
                android:src="@android:drawable/ic_lock_idle_lock"
                android:tint="#000000" />

            <EditText
                android:id="@+id/comfrim_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="confirm password"
                android:inputType="textPassword"
                android:paddingStart="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="#000000" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#430DAE"
            android:text="Confirm"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>
